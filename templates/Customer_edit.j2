{% extends 'base.html' %}

{% block content %}

<html>
<!-- Adapted from the people.html UI design -->
<head>
	<title>Customer List</title>
</head>
	<h5>Updating Customer</h5> 
		<table border="1" cellpadding="9">
            <!-- Access data tuple passed from app.py --> 
            {% if data %}
			    <thead>
				    <tr>
					    <!-- Iterate through each key in the first entry to get the column name -->
                        {% for key in data[0].keys() %}
					    
                        <!-- Create a <th> tag with the key inside of it, this will be our header row -->
					    <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
					
                        <!-- End of this for loop -->
                        {% endfor %} 
                    </tr>

				<tbody>
					<!-- Now, iterate through every item in data -->{% for item in data %}
					    <tr>
						    <!-- Then iterate through every key in the current item dictionary -->
                            {% for key in item.keys() %}

						    <!-- Create a <td> element with the value of that key in it -->
						    <td> {{item[key]}} </td> 
                            {% endfor %}
					    </tr> 
                        {% endfor %} 
                {% endif %} 
        </table>   
	</div><!-EDIT-->
	<div id="Customer_edit">
		<!-- form to edit data in bsg_people-->
		<form id="Customer_edit" action="/Customer_edit/{{data[0].customer_id}}" method="post">
			<h5>Select SAVE to finish updating</h5>
			<fieldset>

				<input type="hidden" value="{{data[0].customer_id}}" id="customer_id" name="customer_id" required>


				<label for="cfirst_name">first name:</label>
				<input type="text" value="{{data[0].cfirst_name}}" 
				id="cfirst_name" name="cfirst_name"required>


				<label for="clast_name">last name:</label>
				<input type="text" value="{{data[0].clast_name}}" 
				id="clast_name" name="clast_name"required>

				<label for="phone">phone number:</label>
				<input type="text" value="{{data[0].phone}}" 
				id="phone" name="phone"required>
	
            </fieldset>
			<input type="submit" value="Save" name="Customer_edit" class="btn btn-primary" style="margin:.5rem;">
			
			<a href='/Customers'><input class="btn" type="button" value="Cancel"></a>
        </form>
	</div><!--edit-->
</body>
</html>
{% endblock %}